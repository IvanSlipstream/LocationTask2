<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_area_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/thumbnail_area_map_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_area_description"
        android:padding="@dimen/default_inner_padding"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_area_thumbnail"
        android:layout_toEndOf="@+id/iv_area_thumbnail" />

    <TextView
        android:id="@+id/tv_area_properties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_inner_padding"
        android:layout_below="@+id/tv_area_description"
        android:layout_toEndOf="@+id/iv_area_thumbnail"
        android:layout_toRightOf="@+id/iv_area_thumbnail" />

</RelativeLayout>